<h1>Prestadores de Serviço</h1>

<%= link_to 'Novo Prestador', new_admin_provider_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>CNPJ</th>
      <th>CPF</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.first_name %></td>
        <td><%= provider.last_name %></td>
        <td><%= provider.cnpj %></td>
        <td><%= provider.cpf %></td>
        <td><%= provider.email %></td>
        <td><%= provider.phone %></td>
        <td>
          <%= link_to 'Editar', edit_admin_provider_path(provider), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Excluir', admin_provider_path(provider), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>