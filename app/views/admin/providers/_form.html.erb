<%= form_with(model: [:admin, @provider], local: true) do |form| %>
    <div class="field">
      <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :cnpj %><br />
        <%= f.text_field :cnpj %>
      </div>

      <div class="field">
        <%= f.label :cpf %><br />
        <%= f.text_field :cpf %>
      </div>

      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </div>

      <div class="field">
        <%= f.label :service_ids, "Serviços oferecidos" %><br />
        <%= f.select :service_ids, Service.all.collect { |s| [s.name.humanize, s.id] }, {}, multiple: true, size: 5 %>
      </div>

      <!-- Remova esses campos -->
      <div class="field">
        <%= f.label :password %>Digite uma senha provisória (OBRIGATÓRIO)<br />
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>Confirme a senha provisória (OBRIGATÓRIO)<br />
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="actions">
        <%= f.submit "Create Provider" %>
      </div>
  <% end %>

  <% if @provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@provider.errors.count, "erro") %> impediram a criação deste prestador:</h2>
      <ul>
        <% @provider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= link_to 'Voltar ao Painel Admin', admin_root_path, class: 'btn btn-secondary' %>