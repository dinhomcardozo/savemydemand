<%= form_with(model: [:admin, @provider], local: true) do |form| %>
    <div>
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
  
    <div>
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
  
    <div>
      <%= form.label :cnpj %>
      <%= form.text_field :cnpj, class: 'form-control' %>
    </div>
  
    <div>
      <%= form.label :cpf %>
      <%= form.text_field :cpf, class: 'form-control' %>
    </div>
  
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  
    <div>
      <%= form.label :phone %>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>
  
    <div>
      <%= form.label :voiceover %>
      <%= form.check_box :voiceover %>
    </div>
  
    <div>
      <%= form.label :acting %>
      <%= form.check_box :acting %>
    </div>
  
    <div>
      <%= form.label :editing %>
      <%= form.check_box :editing %>
    </div>
  
    <div>
      <%= form.label :recording %>
      <%= form.check_box :recording %>
    </div>
  
    <div class="mt-3">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Voltar ao Painel Admin', admin_root_path, class: 'btn btn-secondary' %>